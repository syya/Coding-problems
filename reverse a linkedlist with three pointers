/* Solution: reverse the linkedlist iteratively with three pointers.
*/
class Node{
	int data;
	Node next;
	public Node(int data){
		this.data=data;
	}
}
public class Solution {
	public static void main(String[] args){
		Node n1=new Node(1);
		Node n2=new Node(2);
		Node n3=new Node(3);
		Node n4=new Node(4);
		n1.next=n2;
		n2.next=n3;
		n3.next=n4;
		Node n=reverse(n1);
		Node cur=n;
		while(cur!=null){
			System.out.println(cur.data);
			cur=cur.next;
		}
	}
	public static Node reverse(Node head){
		if(head==null || head.next==null) return head;
		Node n1=head;
		Node n2=n1.next;
		n1.next=null;
		while(n2!=null){
			Node n3=n2.next;
			n2.next=n1;
			n1=n2;
			n2=n3;
		}
		return n1;
	}
}
